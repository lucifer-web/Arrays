#include <bits/stdc++.h>

using namespace std;
int main()
{
    long long int t;
    cin>>t;
    while(t--){
        long long int s=1,i,n,q,m=1000000007;
        cin>>n>>q;
    	if(q==1){
            for( i=2;i<=n;i++){
                s=s+i;
            }
        }
        else if(q==2){
            for( i=2;i<=n;i++){
                s=(s*i)%m;
            }
        }
        cout<<s;
    }
    
}
